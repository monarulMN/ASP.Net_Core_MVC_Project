<td style=" width: 150px">
    <div class="btn-group">
      
        <form asp-action="Edit" method="">
            <input type="hidden" id="id" name="id" value="@Model" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> <i class="bi bi-pencil-square"></i></button>
            </div>
        </form>
        <form asp-action="Details" method="">
            <input type="hidden" id="id" name="id" value="@Model" />
            <div class="form-group">
                <button type="submit" class="btn btn-success"> <i class="bi bi-ticket-detailed"></i></button>
            </div>
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" id="id" name="id" value="@Model" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger"> <i class="bi bi-trash"></i></button>
            </div>
        </form>

    </div>

</td>
